<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHistoricoChamadoEnderecoContribuinte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endereco do Contribuinte"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvHistoricoChamadoContribuinte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Nome do Contribuinte" />

        <TextView
            android:id="@+id/tvHistoricoChamadoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clique para obter mais detalhes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHistoricoChamadoTitulo1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data de criação:"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvHistoricoChamadoInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="__/__/____ | __:__"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHistoricoChamadoTitulo2"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data de termino:"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvHistoricoChamadoFim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="__/__/____ | __:__"
                android:textAlignment="center"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHistoricoChamadoTitulo3"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estado atual:"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvHistoricoChamadoEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/linearLayoutTitulos"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>