<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.testes.ecofacil.UserInterface.ContribuinteInterfaces.ContribuinteHistoricoSolicitacoesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHistoricoTitulo"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Buscar por: " />

        <Spinner
            android:id="@+id/spnHistoricoStatusFiltro"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvHistoricoListTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="HistÃ³rico de solicitacoes: " />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHistoricoRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</ScrollView>


