<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.22">

        <TextView
            android:id="@+id/layout_lista_materiais_solicitacao_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade: " />

        <TextView
            android:id="@+id/layout_lista_materiais_solicitacao_medida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medida:" />

        <TextView
            android:id="@+id/layout_lista_materiais_solicitacao_tipomaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo do Material:" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRemoverMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.47"
        android:text="Remover" />
</LinearLayout>